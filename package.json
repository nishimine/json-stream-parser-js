{
    "name": "@nishimine/json-stream-parser",
    "version": "1.0.0",
    "description": "A lightweight streaming JSON parser with Streams API support for processing large JSON data chunk by chunk",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist/",
        "README.md",
        "README.ja.md",
        "LICENSE"
    ],
    "keywords": [
        "json",
        "stream",
        "parser",
        "streaming",
        "streams-api",
        "typescript",
        "jsonpath"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "esbuild": "^0.25.10",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "prettier-eslint": "^16.4.2",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "build": "node build.js",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "typecheck": "npx tsc --noEmit --strict src/index.d.ts",
        "lint": "eslint src/ test/ --ext .js",
        "lint:fix": "eslint src/ test/ --ext .js --fix",
        "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
        "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
        "pack-check": "npm pack --dry-run"
    },
    "author": "nishimine",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nishimine/json-stream-parser-js.git"
    },
    "bugs": {
        "url": "https://github.com/nishimine/json-stream-parser-js/issues"
    },
    "homepage": "https://github.com/nishimine/json-stream-parser-js"
}
